@model List<MVC_fixxo.Models.Product>


<div id="featured">
    <div class="featured">Featured Product</div>
    <div class="featured-container">
        @foreach (var item in Model)
        {
            <div class="product-container">
                <a asp-controller="ProductItem" asp-action="Index" asp-route-id="@item.ArticleNumber" class="img-container">
                    <img class="product-image" src=@item.Image1 alt="">
                    <img class="placeholder2" src="images/featured/placeholder2.svg" alt="">
                    <img class="icons" src="images/featured/icon-extra.svg" alt="">
                    <button asp-controller="ProductItem" asp-action="Index" asp-route-id="@item.ArticleNumber" class="btn3">QUICK VIEW</button>

                </a>
                <div  class="Category">Category Id:@item.CategoryId</div>
                <a asp-controller="ProductItem" asp-action="Index" asp-route-id="@item.ArticleNumber" class="product-name">@item.Name</a>
                <div class="rated">
                    <img src=@item.Rated alt=""/>
                </div>
                <div class="Price">
                    <div class="old-price">$@item.OldPrice</div>
                    <div class="new-price">$@item.NewPrice</div>
                </div>
            </div>
        }         
    </div>
</div>